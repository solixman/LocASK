generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Answer {
  id         Int      @id @default(autoincrement())
  content    String
  userId     Int
  questionId Int      // reference to the question in Questions service
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}