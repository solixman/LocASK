generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Question {
  id        String   @id @default(uuid())
  title     String
  content   String
  userId    String
  latitude  Float
  longitude Float 
  createdAt DateTime @default(now())
  likes     Like[]
}

model Like {
  id         String   @id @default(uuid())
  userId     String
  questionId String
  createdAt  DateTime @default(now())
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
}
